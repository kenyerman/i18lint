{
  "name": "@kenyerman/i18lint",
  "version": "1.1.1",
  "description": "Linter for multiple translation files",
  "main": "./lib/index.js",
  "bin": {
    "i18lint": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc -p .",
    "lint:fix": "eslint --fix ./src",
    "lint:check": "eslint ./src",
    "lint:ci": "eslint",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prettier:ci": "prettier --check",
    "husky:init": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenyerman/i18lint.git"
  },
  "author": "Balázs Simó (@kenyerman)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kenyerman/i18lint/issues"
  },
  "homepage": "https://github.com/kenyerman/i18lint#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/json-stable-stringify": "^1.0.34",
    "@types/node": "^18.11.9",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "editorconfig": "^2.0.0",
    "glob": "^10.3.10",
    "json-stable-stringify": "^1.0.2",
    "yargs": "^17.6.2"
  },
  "type": "module"
}
